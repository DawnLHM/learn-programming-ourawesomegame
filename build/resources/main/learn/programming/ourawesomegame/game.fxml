<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.canvas.Canvas?>
<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="learn.programming.ourawesomegame.GameController"
           style="-fx-background: royalblue;">

    <AnchorPane fx:id="game_play">
        <Canvas fx:id="game_canvas">

        </Canvas>
        <Button AnchorPane.bottomAnchor="600" AnchorPane.leftAnchor="50"
                fx:id="runningButton1"
                text="We"
        />
        <Button AnchorPane.bottomAnchor="600" AnchorPane.leftAnchor="150"
                fx:id="runningButton2"
                text="Will"
        />
        <Button AnchorPane.bottomAnchor="600" AnchorPane.leftAnchor="250"
                fx:id="runningButton3"
                text="Run"
        />
        <Button AnchorPane.bottomAnchor="600" AnchorPane.leftAnchor="350"
                fx:id="runningButton4"
                text="Away!"
        />
    </AnchorPane>

    <AnchorPane fx:id="game_controls">
        <Button text="Start!" onAction="#startTheButtonsGoing"
                AnchorPane.bottomAnchor="100" AnchorPane.leftAnchor="50"/>
        <Label fx:id="welcomeText"
               AnchorPane.bottomAnchor="50" AnchorPane.leftAnchor="50"/>
    </AnchorPane>


</StackPane>